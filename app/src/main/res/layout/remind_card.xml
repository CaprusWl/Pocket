<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="411dp"
    android:layout_height="136dp"
    android:background="@mipmap/card_parent">

    <!--<ImageView-->
    <!--android:layout_width="20dp"-->
    <!--android:layout_height="20dp"-->
    <!--android:layout_marginStart="28dp"-->
    <!--android:layout_marginTop="24dp"-->
    <!--android:src="@drawable/origin_dot" />-->

    <TextView
        android:id="@+id/event_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="26dp"
        android:textColor="#ff424242"
        android:textSize="18sp"
        tools:text="记得吃维生素片" />

    <TextView
        android:id="@+id/from_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_name_text"
        android:layout_alignStart="@id/event_name_text"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_round_rect"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp"
        android:textColor="#ff9d7cf4"
        tools:text="来自：乖乖" />

    <TextView
        android:id="@+id/event_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/from_text"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/from_text"
        android:textColor="#ff7d8582"
        tools:text="每天 8:00" />

    <ImageView
        android:id="@+id/finish_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:src="@mipmap/finish" />

</RelativeLayout>