<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timeline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:marker="#9D7CF4"
        app:endLineColor="#D1D1D1"
        app:linePadding="5dp"
        app:lineStyle="dash"
        app:lineWidth="2dp"
        app:markerInCenter="false"
        app:markerSize="20dp"
        app:startLineColor="#D1D1D1" />

    <RelativeLayout
        android:paddingTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="7月27日"
            android:textColor="#7D8582"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_from_whom"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_below="@+id/txt_date"
            android:background="#9D7CF4"
            android:layout_marginTop="5dp"
            android:contentDescription="the one who send this memory" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_date"
            android:textColor="#424242"
            android:layout_marginStart="30dp"
            android:text="北京市一日游"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txt_content_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共12张照片, 2段视频"
            android:textSize="15sp"
            android:textColor="#7D8582"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/txt_title"
            android:layout_toEndOf="@+id/img_from_whom"/>

    </RelativeLayout>


</LinearLayout>